<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>StudentsServlet</servlet-name>
        <servlet-class>ephyl.sevlets.StudentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>ephyl.sevlets.CourseServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CourseManager</servlet-name>
        <servlet-class>ephyl.sevlets.CourseManagerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AllStudentServlet</servlet-name>
        <servlet-class>ephyl.sevlets.AllStudentsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TeacherServlet</servlet-name>
        <servlet-class>ephyl.sevlets.TeacherServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AllTeachersServlet</servlet-name>
        <servlet-class>ephyl.sevlets.AllTeachersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllCoursesServlet</servlet-name>
        <servlet-class>ephyl.sevlets.AllCoursesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentsServlet</servlet-name>
        <url-pattern>/api/students/id</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/api/courses/id</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseManager</servlet-name>
        <url-pattern>/api/manage-course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllStudentServlet</servlet-name>
        <url-pattern>/api/students/get-all</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherServlet</servlet-name>
        <url-pattern>/api/teachers/id</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllTeachersServlet</servlet-name>
        <url-pattern>/api/teachers/get-all</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllCoursesServlet</servlet-name>
        <url-pattern>/api/courses/get-all</url-pattern>
    </servlet-mapping>
</web-app>
